<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}E-Commerce{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    
    <body>
        <nav class="bg-yellow-500">
            <div class="mx-auto w-full flex justify-around py-5">
                <div class="self-center">
                    <h1>E-Commerce</h1>
                </div>

                <div class="flex justify-between space-x-3 items-center">
                    <div>
                        <input type="text" id="search" name="search" class="border rounded">
                        <button class="bg-blue-400 text-white rounded py-1 px-3">Rechercher</button>
                    </div>

                    <div>
                        <img src="img/panier.svg" alt="" width="50px" />
                    </div>
                </div>

                <div class="bg-blue-400 rounded py-1 px-3">
                    {% if app.user %}
                        <a href="{{ path('app_account') }}">Mon compte</a> | <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Connexion</a> | <a href="{{ path('app_register') }}">Inscription</a>
                    {% endif %}
                </div>
            </div>
        </nav>

        {% block content %}{% endblock %}
    </body>
</html>
